@model ShampanBFRS.Models.SetUpVMs.ChargeHeaderVM
@{
    ViewBag.Title = "Charge Header Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Charge Header List </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
             
                </ol>
            </div>
        </div>
    </div>
</div>
 @Html.HiddenFor(model => model.Id)

<div class="container-fluid">
    <div class="card">
        <div class="card-header p-2">
            <button type="button" title="Add New" data-url="/SetUp/ChargeHeader/Create" onclick="GoTo(this)" class="button NewButton addNewButton">
                New
            </button>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                Charge Header  Info
            </h3>
        </div>
        <div class="card-body">
            <div id="GridDataList"></div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/SetUp/js/Controller/ChargeHeaderController.js"></script>


    <script>
        $(document).ready(function () {

            ChargeHeaderController.init();

            var message = '@(TempData["Message"])';
            if (message) {
                alert(message);
                window.close();
            }

        });

    </script>


}




