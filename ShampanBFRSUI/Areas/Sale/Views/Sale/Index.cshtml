@model ShampanBFRS.Models.Sale.SaleHeaderVM
@{
    ViewBag.Title = "Sale Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Sale (@Model.BudgetType) </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                </ol>
            </div>
        </div>
    </div>
</div>
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.BudgetType)

<div class="container-fluid">
    <div class="card">
        <div class="card-header p-2">
            <button type="button" title="Add New" data-url="/Sale/Sale/Create?BudgetType=@Model.BudgetType" onclick="GoTo(this)" class="button NewButton addNewButton">
                New
            </button>

            @*<button type="button" title="Post data" id="btnPost" class="button sslPost">
                Post
            </button>*@
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                Sale Info
            </h3>
        </div>
        <div class="card-body">
            <div id="GridDataList"></div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/Sale/js/SaleController.js"></script>


    <script>
        $(document).ready(function () {

            SaleController.init();

            var message = '@(TempData["Message"])';
            if (message) {
                window.close();
            }

        });

    </script>


}




