@model ShampanBFRS.Models.Ceiling.BudgetHeaderVM

@{
    ViewBag.Title = "Product Income Statement Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="tabs">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Product Income Statement Report</h1>

                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li id="btnBack"><img src="~/Content/css/ButtonsIcons/back-icon.png" title="Click for Go Back" /></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="mt-3">
            <div id="tabs-1">
                <form id="frmEntry">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Product Income Statement Info</h3>
                        </div>
                        <div class="card-body">

                            <div class="form-group row">

                                <div class="col-sm-2">
                                    @Html.LabelFor(model => model.FiscalYearId)
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.FiscalYearId, new { placeholder = "Enter Fiscal Year", @class = "form-control form-control-sm" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.FiscalYearId)
                                </div>

                                <div class="col-sm-2">
                                    @Html.LabelFor(model => model.ReportType)
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.ReportType, new { placeholder = "Enter Report Type", @class = "form-control form-control-sm" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ReportType)
                                </div>


                            </div>

                        </div>


                    </div>

                </form>

                <div class="card" style="flex-direction: row; justify-content: space-between; align-items: center;">
                    <div class="card-header p-2">

                        <div class="divSave">
                            <button class="button btnDownload sslSave" type="button" id="">Download</button>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/Reports/js/ProductIncomeStatementReportController.js"></script>

    <script>
        $(document).ready(function () {
            ProductIncomeStatementReportController.init();
        });

    </script>

}






