@model ShampanBFRS.Models.SalaryAllowance.SalaryAllowanceHeaderVM
@{
    ViewBag.Title = "Salary Allowance Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Salary Allowance List </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                </ol>
            </div>
        </div>
    </div>
</div>
@Html.HiddenFor(model => model.Id)

<div class="container-fluid">
    <div class="card">
        <div class="card-header p-2">
            <button type="button" title="Add New" data-url="/SalaryAllowance/SalaryAllowance/Create" onclick="GoTo(this)" class="button NewButton addNewButton">
                New
            </button>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                Salary Allowance Info
            </h3>
        </div>
        <div class="card-body">
            <div id="GridDataList"></div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/SalaryAllowance/js/Controller/SalaryAllowanceController.js"></script>


    <script>
        $(document).ready(function () {

            SalaryAllowanceController.init();

            var message = '@(TempData["Message"])';
            if (message) {
                window.close();
            }

        });

    </script>


}




