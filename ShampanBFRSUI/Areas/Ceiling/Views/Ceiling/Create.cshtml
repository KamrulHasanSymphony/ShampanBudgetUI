@model ShampanBFRS.Models.Ceiling.CeilingVM

@{
    ViewBag.Title = "Budget";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="tabs">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    @if (Model.Operation == "add")
                    {
                        <h1 class="m-0">Budget Create(@Model.BudgetType)</h1>
                    }
                    else
                    {
                        <h1 class="m-0">Budget Edit(@Model.BudgetType)</h1>
                    }
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li id="btnBack"><img src="~/Content/css/ButtonsIcons/back-icon.png" title="Click for Go Back" /></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header p-2">

            @if (Model.IsPost == "1")
            {
                <button type="button" class="button sslPush">Already Posted</button>
            }
            else if (Model.Operation.Equals("update", StringComparison.OrdinalIgnoreCase))
            {
                <button style="float:right;" type="button" title="Add New" data-url="/Ceiling/Ceiling/Create" onclick="GoTo(this)" class="button NewButton addNewButton">
                    New
                </button>

                <button type="button" class="button btnsave sslUpdate">Update</button>

                <button type="button" class="button btnPost sslPost">Post</button>

                <button type="button" style="display:none;" class="button sslPush">Already Posted</button>
            }
            else
            {
                <div style="display:none;" class="divUpdate">
                    <button type="button" class="button btnsave sslUpdate">Update</button>
                    <button type="button" class="button btnPost sslPost">Post</button>
                    <button type="button" style="display:none;" class="button sslPush">Already Posted</button>
                    <button style="float:right;" type="button" title="Add New" data-url="/Ceiling/Ceiling/Create" onclick="GoTo(this)" class="button NewButton addNewButton">
                        New
                    </button>
                </div>
                <div class="divSave">
                    <button class="button btnsave sslSave" type="button" id="">Save</button>
                </div>
            }

        </div>

    </div>


    <div class="container-fluid">
        <div class="mt-3">
            <div id="tabs-1">
                <form id="frmEntry">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Budget Info</h3>
                        </div>
                        <div class="card-body">
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.Operation)
                            @Html.HiddenFor(model => model.TransactionType)
                            @Html.HiddenFor(model => model.BudgetType)
                            @Html.HiddenFor(model => model.BudgetSetNo)
                            @Html.HiddenFor(model => model.TransactionDate)

                            <div class="form-group row">
                                <div class="col-sm-3">
                                    @Html.LabelFor(model => model.Code)
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.Code, new { placeholder = "Code", @class = "form-control form-control-sm", @readonly = "readonly" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Code)
                                </div>

                                <div class="col-sm-2">
                                    @Html.LabelFor(model => model.GLFiscalYearId)
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.GLFiscalYearId, new { placeholder = "Enter Fiscal Year", @class = "form-control form-control-sm" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.GLFiscalYearId)
                                </div>

                                @if (Model.Operation.Equals("update", StringComparison.OrdinalIgnoreCase))
                                {
                                    <div class="col-sm-3">
                                        @Html.LabelFor(model => model.IsActive)
                                        <div class="Onoffbtn">
                                            <div class="input-group" style="margin-bottom: -26px; width: 78%;">
                                                <input id="IsActive"
                                                       value="@Model.IsActive"
                                                       type="checkbox"
                                                       name="my-checkbox"
                                                       @(Model.IsActive ? "checked" : "")
                                                       data-bootstrap-switch
                                                       data-off-color="danger"
                                                       data-on-color="success"
                                                       data-on-text="Yes"
                                                       data-off-text="No">
                                            </div>
                                        </div>
                                    </div>
                                }



                            </div>

                           



                        </div>

                    </div>

                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">
                                Details
                            </h3>
                        </div>
                        <div class="card-body">
                            <div id="CeilingDetailsData"></div>
                        </div>
                    </div>

                </form>


                @if (Model.MenuType == "Self")
                {



                }

                <div class="card" style="flex-direction: row; justify-content: space-between; align-items: center;">
                    <div class="card-header p-2">

                        @if (Model.IsPost == "1")
                        {
                            <button type="button" class="button sslPush">Already Posted</button>
                        }

                        else if (Model.Operation.Equals("update", StringComparison.OrdinalIgnoreCase))
                        {
                            <button type="button" class="button btnsave sslUpdate">Update</button>

                            <button style="float: right; margin-left: 5px;" type="button" title="Add New" data-url="/Ceiling/Ceiling/Create?TransactionType=@Model.TransactionType&MenuType=@Model.MenuType&BudgetType=@Model.BudgetType" onclick="GoTo(this)" class="button NewButton addNewButton">
                                New
                            </button>
                            <button type="button" class="button btnPost sslPost">Post</button>

                            <button type="button" style="display:none;" class="button sslPush">Already Posted</button>

                        }
                        else
                        {
                            <div style="display:none;" class="divUpdate">
                                <button type="button" class="button btnsave sslUpdate">Update</button>
                                <button style="float: right; margin-left: 5px;" type="button" title="Add New"
                                        data-url="/Ceiling/Ceiling/Create?TransactionType=@Model.TransactionType&MenuType=@Model.MenuType&BudgetType=@Model.BudgetType" onclick="GoTo(this)" class="button NewButton addNewButton">
                                    New
                                </button>
                            </div>
                            <div class="divSave">
                                <button class="button btnsave sslSave" type="button" id="">Save</button>
                            </div>
                        }

    

                    </div>
                    <div class="auditshow"> <img src="~/Content/Images/audit.png" title="Click for Audit" /> </div>
                </div>


                <div class="card card-secondary auditcard">

                    <div class="card-header">
                        <h3 class="card-title">Audit Details</h3>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-2">
                                <div class="row">
                                    @Html.Label("Type")
                                </div>
                            </div>
                            <div class="col-sm-10">
                                <div class="row">
                                    <div class="col-sm-3">
                                        @Html.Label("Created")
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.Label("Updated")
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-2">
                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.Label("By")<br /><div class="clearfix">&nbsp;</div>
                                        @Html.Label("On")<br /><div class="clearfix">&nbsp;</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-10">

                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/Common/js/Services/CommonService.js"></script>
    <script src="~/Areas/Common/js/Services/CommonAjaxService.js"></script>
    <script src="~/Areas/Ceiling/js/Controllers/CeilingController.js"></script>

    <script>
        $(document).ready(function () {
            CeilingController.init();
        });

    </script>
    <script>
        // bootstrapSwitch initialize
        $("[data-bootstrap-switch]").each(function () {
            $(this).bootstrapSwitch('state', $(this).prop('checked'));
        });
    </script>
}
